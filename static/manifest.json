{
	"name": "GWON Tools",
	"version": "1.0",
	"description": "A Chrome extension for GWON Tools",
	"manifest_version": 3,
	"action": {
		"default_title": "Send page source"
	},
	"permissions": [
		"activeTab",
		"scripting",
		"storage",
		"offscreen",
		"notifications"
	],
	"host_permissions": [
		"https://api.gwont.com/*"
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"commands": {
		"do-something": {
			"suggested_key": {
				"default": "Ctrl+Q"
			},
			"description": "Trigger my action"
		}
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	}
}
